---
const { title, date } = Astro.props;

interface Props {
    title: string;
    date: Date;
}
---

<article class="prose border rounded-xl prose-neutral max-w-screen-md mx-auto p-4">
  <h1 class="text-2xl font-bold">{title}</h1>
  <p class="text-sm text-gray-500 mb-6 border-b-1 pb-1 border-dotted">{new Date(date).toDateString()}</p>
  <slot />
</article>
